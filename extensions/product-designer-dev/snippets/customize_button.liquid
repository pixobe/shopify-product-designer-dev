<pixobe-customize-button
  label="{{ btn_label | default: 'Customize' }}"
  {% if btn_background %}
    background-color="{{ btn_background }}"
  {% endif %}
  {% if btn_color %}
    text-color="{{ btn_color }}"
  {% endif %}
  button-placement="{{ btn_placement | default: 'button-cart' }}"
></pixobe-customize-button>

<pixobe-modal id="pixobe-customize-modal">
  <pixobe-spinner></pixobe-spinner>
</pixobe-modal>
