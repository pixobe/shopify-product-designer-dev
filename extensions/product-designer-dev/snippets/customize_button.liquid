<!-- PixobeCustomizeButton Web Component -->
<pixobe-customize-button
  label="{{ btn_label | default: 'Customize' }}"
  variant="primary"
  position="{{ btn_placement | default: 'default' }}"
  product-id="{{ product.id | default: '' }}"
  style="
    {% if btn_background %}--primary-color: {{ btn_background }};{% endif %}
    {% if btn_color %}color: {{ btn_color }};{% endif %}
  "
></pixobe-customize-button>

<pixobe-modal id="pixobe-customize-modal">
  <pixobe-spinner></pixobe-spinner>
</pixobe-modal>
